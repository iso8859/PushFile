{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FileUpload": {
    "DestinationDirectory": "C:\\Uploads",
    "MaxFileSizeMB": 100,
    "AllowedExtensions": [
      ".pdf",
      ".doc",
      ".docx",
      ".txt",
      ".zip",
      ".jpg",
      ".png"
    ]
  },
  "Email": {
    "SmtpServer": "smtp.fastmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "%SmtpLogin%",
    "SmtpPassword": "%SmtpPassword%",
    "EnableSsl": true,
    "FromEmail": "%SmtpTo%",
    "FromName": "File Upload System",
    "NotificationEmail": "%SmtpTo%"
  },
  "PageSettings": {
    "Title": "File Upload Portal",
    "WelcomeMessage": "Upload your files securely"
  }
}
