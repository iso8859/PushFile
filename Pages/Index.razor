@page "/"
@page "/upload"

<PageTitle>@pageSettings?.Title</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@pageSettings?.Title</h3>
                </div>
                <div class="card-body">
                    <p class="lead">@pageSettings?.WelcomeMessage</p>
                    
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @successMessage
                        </div>
                    }

                    @if (isUploading)
                    {
                        <div class="text-center my-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Uploading...</span>
                            </div>
                            <p class="mt-2">Uploading file and sending notification...</p>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label for="fileInput" class="form-label fw-bold">Select a file to upload:</label>
                            <InputFile OnChange="HandleFileSelected" class="form-control" id="fileInput" />
                            <small class="form-text text-muted">
                                Max size: @uploadSettings?.MaxFileSizeMB MB
                            </small>
                        </div>

                        <button class="btn btn-primary btn-lg w-100" 
                                @onclick="UploadFile" 
                                disabled="@(selectedFile == null || isUploading)">
                            <i class="bi bi-cloud-upload"></i> Upload File
                        </button>
                    }

                    @if (selectedFile != null && !isUploading)
                    {
                        <div class="mt-3">
                            <h5>Selected File:</h5>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <strong>Name:</strong> @selectedFile.Name
                                </li>
                                <li class="list-group-item">
                                    <strong>Size:</strong> @FormatFileSize(selectedFile.Size)
                                </li>
                                <li class="list-group-item">
                                    <strong>Type:</strong> @selectedFile.ContentType
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] private IFileUploadService? FileUploadService { get; set; }
    [Inject] private IEmailService? EmailService { get; set; }
    [Inject] private IOptions<FileUploadSettings>? UploadSettingsOptions { get; set; }
    [Inject] private IOptions<PageSettings>? PageSettingsOptions { get; set; }

    private IBrowserFile? selectedFile;
    private string? errorMessage;
    private string? successMessage;
    private bool isUploading;
    private FileUploadSettings? uploadSettings;
    private PageSettings? pageSettings;

    protected override void OnInitialized()
    {
        uploadSettings = UploadSettingsOptions?.Value;
        pageSettings = PageSettingsOptions?.Value;
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        errorMessage = null;
        successMessage = null;
    }

    private async Task UploadFile()
    {
        if (selectedFile == null || FileUploadService == null || EmailService == null || uploadSettings == null)
        {
            errorMessage = "File upload service is not available.";
            return;
        }

        errorMessage = null;
        successMessage = null;
        isUploading = true;

        try
        {
            // Validate file size
            var maxSizeInBytes = uploadSettings.MaxFileSizeMB * 1024 * 1024;
            if (selectedFile.Size > maxSizeInBytes)
            {
                errorMessage = $"File size exceeds the maximum allowed size of {uploadSettings.MaxFileSizeMB} MB.";
                return;
            }

            // Upload the file
            var filePath = await FileUploadService.SaveFileAsync(selectedFile);

            // Send email notification
            await EmailService.SendFileUploadNotificationAsync(
                selectedFile.Name,
                selectedFile.Size,
                filePath
            );

            successMessage = $"File '{selectedFile.Name}' uploaded successfully! A notification email has been sent.";
            selectedFile = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error uploading file: {ex.Message}";
        }
        finally
        {
            isUploading = false;
        }
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}
